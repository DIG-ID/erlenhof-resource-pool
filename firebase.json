{
  "hosting": {
    "public": "dist", // Astro gera a build nesta pasta (via adapter)
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "function": "astroSSR" // nome da function de SSR (se usares)
      }
    ]
  },
  "functions": {
    "source": "functions" // pasta onde estão os cronjobs e funções Firebase
  }
}
